{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "actions/*": ["actions/*"],
      "app/*": ["app/*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "context/*": ["context/*"],
      "hooks/*": ["hooks/*"],
      "icons/*": ["icons/*"],
      "lib/*": ["lib/*"],
      "shared/*": ["shared/*"],
      "types/*": ["types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "instrumentation.ts",
    "postcss.config.mjs",
    "tailwind.config.js",
    "src/__tests__/events.test.ts"
  ],
  "exclude": ["node_modules"]
}
